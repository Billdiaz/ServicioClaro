@model IEnumerable<ServiciosClaro.Recargas>

@{
    ViewBag.Title = "Recargas";
}

<h2>Mis Recargas</h2>


<table class="table">
    <thead class="bg-danger text-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lugar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Lugar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @Class = "badge badge-success" })
                </td>
            </tr>
        }
    </tbody>
</table>

