@model ServiciosClaro.Recargas

@{
    ViewBag.Title = "Details";
}

<h2>Detalles Recarga</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Lugar)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lugar)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Precio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Precio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Celular)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Celular)
        </dd>

        @if (!User.IsInRole("Cliente"))
        {

            <dt>
                @Html.DisplayNameFor(model => model.Clientes.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Clientes.Nombre)
            </dd>

        }
        

    </dl>
</div>
<p>
    @Html.ActionLink("Volver", "Index", null, new { @Class = "badge badge-danger", @Id = "Volver" })

    |

    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @Class = "badge badge-primary", @Id = "Volver" })
    }
</p>
