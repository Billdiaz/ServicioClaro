@model IEnumerable<ServiciosClaro.Recargas>

@{
    ViewBag.Title = "Recargas";
}

<h2>Gestion de Recargas</h2>

<p>
    @Html.ActionLink("Agregar Recarga", "Create", null, new { @Class = "badge badge-danger", @Id = "linku" })
</p>
<table class="table">
    <thead class="bg-danger text-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lugar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clientes.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tareas.Tarea)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Lugar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clientes.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tareas.Tarea)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @Class = "badge badge-primary" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @Class = "badge badge-success" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @Class = "badge badge-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
