@model IEnumerable<ServiciosClaro.Tareas>

@{
    ViewBag.Title = "Index";
    
}

<h2>Servicios</h2>
<hr />

<div class="row">

    @foreach (var item in Model)
    {
        var imagen = "../../Imagenes/Tareas/" + item.Id + ".jpg";

        <div class="tarea" id="tarea">
            <div class="imagen">
                <img src="@imagen" alt="Imagen" />
            </div>
            <div class="info">

                <div>
                    <h3>@Html.DisplayFor(modelItem => item.Tarea)</h3>
                </div>
                <div>
                    <p>@Html.DisplayFor(modelItem => item.Detalles)</p>
                </div>

                @if (User.IsInRole("Cliente"))
                {
                    
                    <div>
                        @Html.ActionLink("Solicitar Servicio", "create", item.Tarea, null, new { @Class = "badge badge-danger", @Id = "Volver" })
                    </div>
                }

                <div>
                    <div>
                        @if (User.IsInRole("Admin"))
                        {

                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @Class = "badge badge-primary" }) 
                            <span>|</span>

                        }

                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @Class = "badge badge-success" })
                    </div>

                </div>

            </div>
        </div>

    }

</div>
